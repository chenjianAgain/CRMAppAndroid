<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/re_item_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip">

        <ImageView
            android:id="@+id/child_item_head"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:layout_centerInParent="true" 
            android:src="@drawable/ic_launcher"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/re_item_head"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blackgrey" 
            android:text="这家伙很懒,什么也没留下"/>
    </LinearLayout>
</RelativeLayout><!-- From: file:/D:/svn/app-android/Athenabranch/res/layout/chat_item.xml -->